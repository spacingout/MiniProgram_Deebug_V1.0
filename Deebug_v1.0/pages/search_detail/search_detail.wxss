.wxSearch{
  position: absolute;
  top: 43rpx;
  left: 0;
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  border-top: 1px #eee solid;
  /* background-color: rgba(0, 0, 0, 0.2); */
  background-color: rgba(255, 255, 255, 0.2);
}
.wxSearchInner{
  background-color: #fff;
}
.wxSearch-section{
  background-color: #fff;
  padding: 4px 10px;
  border: 1px #eee solid;
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
}
.wxSearch-input{
  flex: 8; 
  background-color: #99a7a0; 
  padding: 10rpx 20rpx;
  border-radius: 5em;
  margin-top: 10rpx;
}
.wxSearch-button{
  flex: 1;
  border: none !important;
  color: cornflowerblue !important;
}

.wxSearchTitle{
  display: block;
  padding: 10px 5px 5px 10px;
  font-size: 30rpx;
  margin: 5rpx 0 0 63rpx;
  text-shadow: teal;
  color: rgb(153, 152, 152);
  font-weight:bold;
  letter-spacing:5rpx;
}


.wxSearchMindKeyItem{
  margin-left: 10%;
  margin-right: 10%;
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
  font-size: 35rpx;
  color: rgb(97, 114, 145);
}

.wxSearchKeyList{
  display: flex;
  flex-direction:row;
  flex-wrap: wrap;
  justify-content:space-around;
  align-items:center;
}

.wxSearchKeyItem{
  flex: 0 0 40%;
  font-size: 30rpx;
  text-align: center;
  border: 1px solid rgb(190, 190, 190);
  margin: 5rpx;
  padding: 5rpx 10rpx;
  border-radius: 5em;
  color: #9aa6a0;
  width: 30%;
  line-height: 60rpx;
  height: 60rpx;
}
.wxSearchHistoryItem{
  margin-left: 10%;
  margin-right: 10%;
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
  font-size: 35rpx;
  color: rgb(97, 114, 145);
}
.wxSearchHistoryItemText{
  flex: 8;
  font-size: 14px;
}
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 12px;
  text-align: center;
  padding: 3px 5px;
  border: 1px solid #eee;
  border-radius: 5px;
}
.wxSearchHistoryEmpty{
  display: block;
  padding: 10px 5px 5px 10px;
  font-size: 30rpx;
  text-align: center;
  text-shadow: teal;
  color: #a9cbb9;
  font-weight:bold;
  letter-spacing:5rpx;
  height: 70rpx;
}
.wxSearchDeleteAllBtn{
  display: block;
  padding: 17px 5px 5px 10px;
  font-size: 30rpx;
  text-align: center;
  text-shadow: teal;
  color: #203a2d;
  font-weight:bold;
  letter-spacing:5rpx;
  height: 70rpx;
}