<view><text style='color:black;font-weight:bold;font-size:60rpx;letter-spacing:1rpx;'>{{pname}}</text></view>
<view style='margin-top:2%'><text style='color:#9aa6a0;font-size:35rpx;letter-spacing:0rpx;'>别名:{{other_name}}</text></view>
</view>

<!-- 正文区域 -->
<!-- block -->
<view style='margin-top:9%'>
<view><text style='color:#203a2d;font-size:38rpx;font-weight:bold;letter-spacing:2rpx;'>种植区域</text></view>
<view style='margin-top:2%'><text class='main_body'>{{parea}}</text></view>
</view>

<!-- block -->
<view style='margin-top:5%'>
<view><text style='color:#203a2d;font-size:38rpx;font-weight:bold;letter-spacing:2rpx;'>种植时间</text></view>
<view style='margin-top:2%'><text class='main_body'>{{ptime}}</text></view>
</view>

<!-- block -->
<view style='margin-top:5%;'>
<view><text style='color:#203a2d;font-size:38rpx;font-weight:bold;letter-spacing:2rpx;'>营养价值</text></view>
<view style='margin-top:2%'><text class='main_body'>{{pnutrition}}</text></view>
</view>

</view>
</view>

<view style='height:20%;text-align: center;margin-left:10%;margin-right:10%;margin-top:5%;margin-bottom:20%;border-top:5rpx #dbe4e0 solid'></view>
<view style='text-align: center;margin-left:10%;margin-right:10%;margin-top:10%;margin-bottom:15%;border-top:5rpx #dbe4e0 solid'></view>

